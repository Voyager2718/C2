<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08f"
    android:orientation="horizontal"
    android:paddingTop="55dp">

    <com.zhipengyang.bunnyc2.canvas.HomeCanvas
        android:id="@+id/home_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/properties"
        android:layout_width="@dimen/middle_icon"
        android:layout_height="@dimen/middle_icon"
        android:layout_alignBottom="@+id/home_canvas"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/properties" />
</RelativeLayout>